%h2
  Settings #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
  .form-inputs
    = f.input :username, required: false, autofocus: true
    = f.input :email, required: false
    = f.input :nickname, required: false
  .form-actions
    = f.button :submit, "Update"
= link_to "Back", :back
